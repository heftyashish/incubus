              <h1 id="forms">Register</h1>

            <div class="well bs-component">     

		<%= form_tag("/register", class: "form-horizontal", :method => "post" ) do %>
			<fieldset>
	
			    <div class="form-group">
			      <label for="select" class="col-lg-2 control-label">Select Program</label>
			      <div class="col-lg-10">
			      	<%= select_tag 'program', options_for_select(["STIP", "Avighna", "WTIP"]), :class=>"form-control", :id=>"select" , :required=> true%>
			      </div>
			    </div>

			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
			      <div class="col-lg-10">
			        <%= text_field_tag "email", nil, :class=>"form-control", :id=>"inputEmail", :placeholder=>"Email", :required=> true %>
			      </div>
			    </div>

			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">Full Name</label>
			      <div class="col-lg-10">
			        <%= text_field_tag "full_name", nil, :class=>"form-control", :id=>"name", :placeholder=>"Full Name", :required=> true %>
			      </div>
			    </div>

			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">Mobile Number</label>
			      <div class="col-lg-10">
			        <%= text_field_tag "mobile", nil, :class=>"form-control", :id=>"mobile", :placeholder=>"Mobile" , :required=> true%>
			      </div>
			    </div>	
			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">College Name</label>
			      <div class="col-lg-10">
			        <%= text_field_tag "college", nil, :class=>"form-control", :id=>"college", :placeholder=>"College Name", :required=> true %>
			      </div>
			    </div>			    
			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">Year of Passing</label>
			      <div class="col-lg-10">
			      	<%= select_tag 'year', options_for_select(["2013","2014", "2015", "2016", "2017", "2018"]), :class=>"form-control", :id=>"select_year", :required=> true %>
			      </div>
			    </div>
			    <div class="form-group">
			      <label for="inputEmail" class="col-lg-2 control-label">Registration Amount</label>
			      <div class="col-lg-10">
			        <%= text_field_tag "registration_amount", nil, :class=>"form-control", :id=>"amount", :placeholder=>"Registration Amount", :required=> true %>
			      </div>
			    </div>			    			    
			<%= submit_tag "Confirm", :class=>"btn btn-primary" %>
		<% end %>
